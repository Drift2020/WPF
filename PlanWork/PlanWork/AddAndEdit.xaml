<Window x:Class="PlanWork.AddAndEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlanWork"
        mc:Ignorable="d"
        Title="AddAndEdit" Height="332" Width="527.048" MinWidth="527.048" MinHeight="332" MaxWidth="527.048" MaxHeight="332">
    <Grid Margin="10">



        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="195*"></ColumnDefinition>
            <ColumnDefinition Width="135*"></ColumnDefinition>
            <ColumnDefinition Width="169*"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <Label DockPanel.Dock="Top" HorizontalAlignment="Left" >Выполнить:</Label>
            <TextBox DockPanel.Dock="Top"></TextBox>
            <Button DockPanel.Dock="Top" HorizontalAlignment="Right" Width="80" Height="20">Обзор...</Button>
        </DockPanel>

        <DockPanel Grid.Row="1" Grid.Column="0">
            <Label DockPanel.Dock="Top" >Назначить задание:</Label>
            <ComboBox Height="20" Margin="10"/>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="1">
            <Label DockPanel.Dock="Top" >Время начала:</Label>
        </DockPanel>
        <DockPanel Grid.Row="1" Grid.Column="2">
            <Label DockPanel.Dock="Top" >Дата начала:</Label>
        </DockPanel>

        <GroupBox Header="Расписание по неделям:" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
            <DockPanel>
                <CheckBox DockPanel.Dock="Left" Margin="10">Пн</CheckBox>
                <CheckBox Margin="10">Вт</CheckBox>
                <CheckBox Margin="10">Ср</CheckBox>
                <CheckBox Margin="10">Чт</CheckBox>
                <CheckBox Margin="10">Пт</CheckBox>
                <CheckBox Margin="10">Сб</CheckBox>
                <CheckBox DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="10">Вс</CheckBox>
            </DockPanel>
        </GroupBox>
        
        <Button Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,35.125,100,15.125"  Content="ОК"  Width="70"/>
        <Button  Grid.Row="3"  Grid.Column="1" Content="Отмена"  HorizontalAlignment="Left"  Margin="75,35.125,0,15.125" Width="70" Grid.ColumnSpan="2"/>


    </Grid>
</Window>
